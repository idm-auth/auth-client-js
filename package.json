{
  "name": "@idm-auth/client",
  "version": "0.1.0",
  "type": "module",
  "description": "IDM Authentication & Authorization Client - HTTP client for remote validation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "npm install --no-save",
    "clean": "rm -rf dist",
    "build": "npm run clean && npm run build:js && npm run build:types",
    "build:js": "node build.mjs",
    "build:types": "tsc --project tsconfig.build.json --emitDeclarationOnly --declaration --declarationMap",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --run --coverage --coverage.reporter=text",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "npx tsc --noEmit --strict"
  },
  "keywords": [
    "idm",
    "iam",
    "authentication",
    "authorization",
    "jwt",
    "policy",
    "rbac"
  ],
  "author": "IDM Auth Team",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/idm-auth/auth-client-js.git"
  },
  "bugs": {
    "url": "https://github.com/idm-auth/auth-client-js/issues"
  },
  "homepage": "https://github.com/idm-auth/auth-client-js#readme",
  "devDependencies": {
    "@tsconfig/node22": "^22.0.5",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/coverage-v8": "^4.0.13",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.67.2",
    "@opentelemetry/sdk-node": "^0.208.0"
  },
  "files": [
    "dist",
    "README.md"
  ]
}
